<!DOCTYPE html>

<title>Order</title>

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Preparation_date</th>
                <td>{{ order.preparationDate ? order.preparationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>OrderItems</th>
                <td>{{ order.orderItems ? order.orderItems|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ order.file }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_order_index') }}">back to list</a>

    <a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}

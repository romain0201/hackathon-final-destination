<!DOCTYPE html>

<title>Order index</title>

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created_at</th>
                <th>Preparation_date</th>
                <th>OrderItems</th>
                <th>File</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.preparationDate ? order.preparationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.orderItems ? order.orderItems|json_encode : '' }}</td>
                <td>
                    {% if order.getFileUrl() %}
                        <a href="{{ order.getFileUrl() }}" target="_blank">Download File</a>
                    {% else %}
                        No file
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_order_show', {'id': order.id}) }}">show</a>
                    <a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_order_new') }}">Create new</a>
{% endblock %}

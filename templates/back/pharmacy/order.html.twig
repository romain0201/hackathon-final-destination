{% extends 'base_back.html.twig' %}

{% block body %}
    <header class="relative isolate">
        <div class="absolute inset-0 -z-10 overflow-hidden" aria-hidden="true">
            <div class="absolute left-16 top-full -mt-16 transform-gpu opacity-50 blur-3xl xl:left-1/2 xl:-ml-80">
                <div class="aspect-[1154/678] w-[72.125rem] bg-gradient-to-br from-[#FF80B5] to-[#9089FC]"
                     style="clip-path: polygon(100% 38.5%, 82.6% 100%, 60.2% 37.7%, 52.4% 32.1%, 47.5% 41.8%, 45.2% 65.6%, 27.5% 23.4%, 0.1% 35.3%, 17.9% 0%, 27.7% 23.4%, 76.2% 2.5%, 74.2% 56%, 100% 38.5%)"></div>
            </div>
            <div class="absolute inset-x-0 bottom-0 h-px bg-gray-900/5"></div>
        </div>

        <div class="mx-auto max-w-7xl px-4 py-10 sm:px-6 lg:px-8">
            <div class="mx-auto flex max-w-2xl items-center justify-between gap-x-8 lg:mx-0 lg:max-w-none">
                <div class="flex items-center gap-x-6">
                    <img src="https://tailwindui.com/img/logos/48x48/tuple.svg" alt=""
                         class="h-16 w-16 flex-none rounded-full ring-1 ring-gray-900/10">
                    <div>
                        <div class="text-sm leading-6 text-gray-500">Ordonnance <span
                                class="text-gray-700">#{{ order.id }}</span>
                        </div>
                        <div class="mt-1 text-base font-semibold leading-6 text-gray-900">{{ order.client.name }}</div>
                    </div>
                </div>
                {% if order.isActive %}
                    <div class="flex items-center gap-x-4 sm:gap-x-6">
                        <a href="{{ path('app_pharmacy_order_validate', {id: order.id}) }}"
                           class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Valider
                            la commande</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </header>

    <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
        <div
            class="mx-auto grid max-w-2xl grid-cols-1 grid-rows-1 items-start gap-x-8 gap-y-8 lg:mx-0 lg:max-w-none lg:grid-cols-3">
            <!-- Invoice summary -->
            <div class="lg:col-start-3 lg:row-end-1">
                <h2 class="sr-only">Summary</h2>
                <div class="rounded-lg bg-gray-50 shadow-sm ring-1 ring-gray-900/5">
                    <dl class="flex flex-wrap py-6">
                        <div class="flex-auto pl-6 pt-6">
                            <dd class="mt-1 text-base font-semibold leading-6 text-gray-900">Statut</dd>
                        </div>
                        <div class="flex-none self-end px-6 pt-4">
                            <dt class="sr-only">Status</dt>
                            <dd class="rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-600 ring-1 ring-inset ring-green-600/20">
                                Payé
                            </dd>
                        </div>
                        <div class="mt-6 flex w-full flex-none gap-x-4 border-t border-gray-900/5 px-6 pt-6">
                            <dt class="flex-none">
                                <span class="sr-only">Client</span>
                                <svg class="h-6 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor"
                                     aria-hidden="true">
                                    <path fill-rule="evenodd"
                                          d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-5.5-2.5a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0zM10 12a5.99 5.99 0 00-4.793 2.39A6.483 6.483 0 0010 16.5a6.483 6.483 0 004.793-2.11A5.99 5.99 0 0010 12z"
                                          clip-rule="evenodd"/>
                                </svg>
                            </dt>
                            <dd class="text-sm font-medium leading-6 text-gray-900">{{ order.client.name }}</dd>
                        </div>
                        <div class="mt-4 flex w-full flex-none gap-x-4 px-6">
                            <dt class="flex-none">
                                <span class="sr-only">Due date</span>
                                <svg class="h-6 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor"
                                     aria-hidden="true">
                                    <path
                                        d="M5.25 12a.75.75 0 01.75-.75h.01a.75.75 0 01.75.75v.01a.75.75 0 01-.75.75H6a.75.75 0 01-.75-.75V12zM6 13.25a.75.75 0 00-.75.75v.01c0 .414.336.75.75.75h.01a.75.75 0 00.75-.75V14a.75.75 0 00-.75-.75H6zM7.25 12a.75.75 0 01.75-.75h.01a.75.75 0 01.75.75v.01a.75.75 0 01-.75.75H8a.75.75 0 01-.75-.75V12zM8 13.25a.75.75 0 00-.75.75v.01c0 .414.336.75.75.75h.01a.75.75 0 00.75-.75V14a.75.75 0 00-.75-.75H8zM9.25 10a.75.75 0 01.75-.75h.01a.75.75 0 01.75.75v.01a.75.75 0 01-.75.75H10a.75.75 0 01-.75-.75V10zM10 11.25a.75.75 0 00-.75.75v.01c0 .414.336.75.75.75h.01a.75.75 0 00.75-.75V12a.75.75 0 00-.75-.75H10zM9.25 14a.75.75 0 01.75-.75h.01a.75.75 0 01.75.75v.01a.75.75 0 01-.75.75H10a.75.75 0 01-.75-.75V14zM12 9.25a.75.75 0 00-.75.75v.01c0 .414.336.75.75.75h.01a.75.75 0 00.75-.75V10a.75.75 0 00-.75-.75H12zM11.25 12a.75.75 0 01.75-.75h.01a.75.75 0 01.75.75v.01a.75.75 0 01-.75.75H12a.75.75 0 01-.75-.75V12zM12 13.25a.75.75 0 00-.75.75v.01c0 .414.336.75.75.75h.01a.75.75 0 00.75-.75V14a.75.75 0 00-.75-.75H12zM13.25 10a.75.75 0 01.75-.75h.01a.75.75 0 01.75.75v.01a.75.75 0 01-.75.75H14a.75.75 0 01-.75-.75V10zM14 11.25a.75.75 0 00-.75.75v.01c0 .414.336.75.75.75h.01a.75.75 0 00.75-.75V12a.75.75 0 00-.75-.75H14z"/>
                                    <path fill-rule="evenodd"
                                          d="M5.75 2a.75.75 0 01.75.75V4h7V2.75a.75.75 0 011.5 0V4h.25A2.75 2.75 0 0118 6.75v8.5A2.75 2.75 0 0115.25 18H4.75A2.75 2.75 0 012 15.25v-8.5A2.75 2.75 0 014.75 4H5V2.75A.75.75 0 015.75 2zm-1 5.5c-.69 0-1.25.56-1.25 1.25v6.5c0 .69.56 1.25 1.25 1.25h10.5c.69 0 1.25-.56 1.25-1.25v-6.5c0-.69-.56-1.25-1.25-1.25H4.75z"
                                          clip-rule="evenodd"/>
                                </svg>
                            </dt>
                            <dd class="text-sm leading-6 text-gray-500">
                                <time datetime="2023-01-31">{{ order.createdAt|date("d/m/Y") }}</time>
                            </dd>
                        </div>
                        <div class="mt-4 flex w-full flex-none gap-x-4 px-6">
                            <dt class="flex-none">
                                <span class="sr-only">Status</span>
                                <svg class="h-6 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor"
                                     aria-hidden="true">
                                    <path fill-rule="evenodd"
                                          d="M2.5 4A1.5 1.5 0 001 5.5V6h18v-.5A1.5 1.5 0 0017.5 4h-15zM19 8.5H1v6A1.5 1.5 0 002.5 16h15a1.5 1.5 0 001.5-1.5v-6zM3 13.25a.75.75 0 01.75-.75h1.5a.75.75 0 010 1.5h-1.5a.75.75 0 01-.75-.75zm4.75-.75a.75.75 0 000 1.5h3.5a.75.75 0 000-1.5h-3.5z"
                                          clip-rule="evenodd"/>
                                </svg>
                            </dt>
                            <dd class="text-sm leading-6 text-gray-500">Émis par : {{ order.doctor }}</dd>
                        </div>
                    </dl>
                    {% if order.file != "" %}
                        <div class="mt-6 border-t border-gray-900/5 px-6 py-6">
                            <a href="{{ order.getFileUrl() }}" class="text-sm font-semibold leading-6 text-gray-900">Télécharger
                                l'ordonnance <span aria-hidden="true">&rarr;</span></a>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div
                class="-mx-4 px-4 py-8 shadow-sm ring-1 ring-gray-900/5 sm:mx-0 sm:rounded-lg sm:px-8 sm:pb-14 lg:col-span-2 lg:row-span-2 lg:row-end-2 xl:px-16 xl:pb-20 xl:pt-16">
                <h2 class="text-base font-semibold leading-6 text-gray-900">Ordonnance</h2>
                <dl class="mt-6 grid grid-cols-1 text-sm leading-6 sm:grid-cols-2">
                    <div class="sm:pr-4">
                        <dt class="inline text-gray-500">En date du :</dt>
                        <dd class="inline text-gray-700">
                            <time datetime="2023-23-01">{{ order.createdAt|date("d/m/Y") }}</time>
                        </dd>
                    </div>
                    <div class="mt-2 sm:mt-0 sm:pl-4">
                        <dt class="inline text-gray-500">À préparer pour :</dt>
                        <dd class="inline text-gray-700">
                            <time datetime="2023-31-01">{{ order.preparationDate|date("d/m/Y") }}</time>
                        </dd>
                    </div>
                    <div class="mt-6 border-t border-gray-900/5 pt-6 sm:pr-4">
                        <dt class="font-semibold text-gray-900">De</dt>
                        <dd class="mt-2 text-gray-500">
                            <span class="font-medium text-gray-900">{{ order.doctor }}</span>
                        </dd>
                    </div>
                    <div class="mt-8 sm:mt-6 sm:border-t sm:border-gray-900/5 sm:pl-4 sm:pt-6">
                        <dt class="font-semibold text-gray-900">Pour</dt>
                        <dd class="mt-2 text-gray-500">
                            <span class="font-medium text-gray-900">{{ order.client.name }}</span>
                            <br> {{ order.client.phone }}
                        </dd>
                    </div>
                </dl>
                <table class="mt-16 w-full whitespace-nowrap text-left text-sm leading-6">
                    <colgroup>
                        <col class="w-full">
                        <col>
                        <col>
                        <col>
                    </colgroup>
                    <thead class="border-b border-gray-200 text-gray-900">
                    <tr>
                        <th scope="col" class="px-0 py-3 font-semibold">Préscription</th>
                        <th scope="col" class="hidden py-3 pl-8 pr-0 text-right font-semibold sm:table-cell">Quantité
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in order.orderItems %}
                        <tr class="border-b border-gray-100">
                            <td class="max-w-0 px-0 py-5 align-top">
                                <div class="truncate font-medium text-gray-900">{{ item.medicament }}</div>
                                <div class="truncate font-medium text-gray-900">{{ item.description }}</div>
                            </td>
                            <td class="py-5 pl-8 pr-0 text-right align-top tabular-nums text-gray-700">{{ item.quantity }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="lg:col-start-3">
                <!-- Activity feed -->
                <h2 class="text-sm font-semibold leading-6 text-gray-900">Activité</h2>
                <ul role="list" class="mt-6 space-y-6">
                    <li class="relative flex gap-x-4">
                        <div class="absolute -bottom-6 left-0 top-0 flex w-6 justify-center">
                            <div class="w-px bg-gray-200"></div>
                        </div>
                        <div class="relative flex h-6 w-6 flex-none items-center justify-center bg-white">
                            <div class="h-1.5 w-1.5 rounded-full bg-gray-100 ring-1 ring-gray-300"></div>
                        </div>
                        <p class="flex-auto py-0.5 text-xs leading-5 text-gray-500"><span
                                class="font-medium text-gray-900">{{ order.doctor }}</span> émet l'ordonnace.</p>
                        <time datetime="2023-01-23T10:32" class="flex-none py-0.5 text-xs leading-5 text-gray-500">
                            1 jour
                        </time>
                    </li>
                    <li class="relative flex gap-x-4">
                        <div class="absolute -bottom-6 left-0 top-0 flex w-6 justify-center">
                            <div class="w-px bg-gray-200"></div>
                        </div>
                        <div class="relative flex h-6 w-6 flex-none items-center justify-center bg-white">
                            <div class="h-1.5 w-1.5 rounded-full bg-gray-100 ring-1 ring-gray-300"></div>
                        </div>
                        <p class="flex-auto py-0.5 text-xs leading-5 text-gray-500"><span
                                class="font-medium text-gray-900">{{ order.pharmacy.name }}</span> récupère sa commande.</p>
                        <time datetime="2023-01-23T11:03" class="flex-none py-0.5 text-xs leading-5 text-gray-500">
                            2 jours
                        </time>
                    </li>
                </ul>
                <div class="mt-6 flex gap-x-3">
                    <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="" class="h-6 w-6 flex-none rounded-full bg-gray-50">
                    {% if order.comment is not empty %}
                        <div class="flex-auto">
                            <p class="text-sm leading-6 text-gray-500"><span class="font-medium text-gray-900">Pharmacie a rajouté commentaire :</span></p>
                            <p class="mt-1 text-sm leading-6 text-gray-700">{{ order.comment }}</p>
                        </div>
                    {% else %}
                        {{ form_start(form, {'attr': {'class': 'relative flex-auto'}}) }}
                        <div class="overflow-hidden rounded-lg pb-12 shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600">
                            {{ form_label(form.comment, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(form.comment) }}
                        </div>

                        <div class="absolute inset-x-0 bottom-0 flex justify-between py-2 pl-3 pr-2">
                            <div class="flex items-center space-x-5">
                            </div>
                            <button type="submit" class="rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">Commenter</button>
                        </div>
                        {{ form_end(form) }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

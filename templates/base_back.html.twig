<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Admin Hackathon {% endblock %}</title>
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
            integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"
        />
        <link
            rel="icon"
            href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"
        />
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        {% block stylesheets %}
        {{
            encore_entry_link_tags("app")
        }}
        {% endblock %} {% block javascripts %}
        {{
            encore_entry_script_tags("app")
        }}
        {% endblock %}
    </head>
    <body>
        <header
            class="h-16 bg-zinc-800 text-white p-4 flex justify-between items-center"
        >
            <div class="flex items-center gap-8">
                <img
                    class="hidden lg:block w-52"
                    src="{{ asset('images/calmedica-logo.png') }}"
                    alt="Calmedica Logo"
                />
                <div class="flex items-center gap-1.5">
                    <p>Aide</p>
                    <img
                        src="{{ asset('icons/caret.svg') }}"
                        alt="Help"
                        class="w-2 h-2"
                    />
                </div>
            </div>
            <div class="flex items-center">
                <nav>
                    <ul class="flex items-center gap-8">
                        <li>
                            <a
                                href="{{ path("app_admin_home") }}"
                                class="{{
                                    app.request.attributes.get('_route') ==
                                    'app_admin_home'
                                        ? 'text-orange-500'
                                        : ''
                                }}"
                                >Afficher les patients</a
                            >
                        </li>
                        <li>
                            <a
                                href="#"
                                class="{{
                                    app.request.attributes.get('_route') ==
                                    'app_waitlist'
                                        ? 'text-orange-500'
                                        : ''
                                }}"
                                >Liste d'attente</a
                            >
                        </li>
                        <li>
                            <a
                                href="#"
                                class="{{
                                    app.request.attributes.get('_route') ==
                                    'app_report'
                                        ? 'text-orange-500'
                                        : ''
                                }}"
                                >Rapport</a
                            >
                        </li>
                        <li>
                            <a
                                href="{{ path('app_statistiques') }}"
                                class="{{
                                    app.request.attributes.get('_route') ==
                                    'app_statistiques'
                                        ? 'text-orange-500'
                                        : ''
                                }}"
                                >Statistiques</a
                            >
                        </li>

                        <li>
                            <a
                                href="#"
                                class="{{
                                    app.request.attributes.get('_route') ==
                                    'app_dashboard'
                                        ? 'text-orange-500'
                                        : ''
                                }}"
                                >Tableau de bord</a
                            >
                        </li>
                        <li>
                            <a
                                href="{{ path('app_logout') }}"
                                >Déconnexion</a
                            >
                        </li>
                    </ul>
                </nav>
                <div class="flex items-center gap-1.5 ml-6">
                    <img
                        src="{{ asset('icons/settings.svg') }}"
                        alt="Settings"
                        class="w-5 h-5"
                    />
                    <img
                        src="{{ asset('icons/caret.svg') }}"
                        alt="Help"
                        class="w-2 h-2"
                    />
                </div>
            </div>
        </header>

        <main class="container pt-12 pb-4 mx-auto">
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
